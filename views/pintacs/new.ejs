<table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Title</th>
        <th>Description</th>

        <td><%= r.Description %></td>
          <!-- Add this td -->
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/boards/<%= r._id %>?_method=DELETE" method="POST">
                <button type="post">X</button>
              </form>
            <% } %>
          </td>
      </tr>
      <tr>
        <td colspan="4">Already have a board? <a href="/boards">Go to boards!!!</a></td>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% pins.board.forEach(function(r) { %>
        <% total += r.pins %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer"><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / pins.board.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>